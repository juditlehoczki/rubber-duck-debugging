{
  "manifest_version": 2,
  "name": "Duck Norris",
  "version": "1.0",
  "description": "A rubber duck debugging tool",
  "author": "Judit Lehoczki",
  "short_name": "ducknorris",
  "icons": {
      "128":"assets/icon128.png",
      "48": "assets/icon128.png",
      "16":"assets/icon16.png"
    },
  "browser_action": {         
    "default_title": "Duck Norris",
    "default_icon": {
      "128":"assets/icon128.png",
      "48": "assets/icon128.png",
      "16":"assets/icon16.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "permissions": ["storage"]
}